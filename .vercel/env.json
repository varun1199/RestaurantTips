{
  "version": 1,
  "env": [
    {
      "key": "DATABASE_URL",
      "description": "PostgreSQL connection string for Neon (format: postgres://user:password@host/database?sslmode=require)",
      "sensitive": true,
      "required": true
    },
    {
      "key": "SESSION_SECRET",
      "description": "Secret used to sign session cookies (at least 32 characters)",
      "sensitive": true,
      "required": true
    },
    {
      "key": "MAINTENANCE_MODE",
      "description": "Set to 'true' to enable maintenance mode or 'false' for normal operation",
      "sensitive": false,
      "required": false,
      "default": "false"
    },
    {
      "key": "NODE_ENV",
      "description": "Deployment environment (development, production)",
      "sensitive": false,
      "required": false,
      "default": "production"
    }
  ]
}