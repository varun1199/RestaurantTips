{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/hello", "dest": "/api/hello.js" },
    { "src": "/api", "dest": "/api/index.js" },
    { "src": "/status", "dest": "/api/status.js" },
    { "src": "/", "dest": "/api/root.js" },
    { "src": "/(.*)", "dest": "/api/static.js" }
  ]
}