{
  "version": 2,
  "buildCommand": "node vercel-build.js",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "public": true,
  "framework": null,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(.*)", 
      "headers": { 
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      },
      "continue": true
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      },
      "continue": true
    },
    { "src": "/api/health", "dest": "/api/health.js", "methods": ["GET"] },
    { "src": "/api/hello", "dest": "/api/hello.js", "methods": ["GET"] },
    { "src": "/api/db-config", "dest": "/api/db-config.js", "methods": ["GET"] },
    { "src": "/api/neon-test", "dest": "/api/neon-test.js", "methods": ["GET"] },
    { "src": "/api/status", "dest": "/api/status.js", "methods": ["GET"] },
    { "src": "/api", "dest": "/api/index.js" },
    { "src": "/status", "dest": "/api/status.js", "methods": ["GET"] },
    { "src": "/fallback", "dest": "/api/fallback.js" },
    { "src": "/(.*)", "dest": "/api/serve.js" }
  ],
  "regions": ["iad1"],
  "env": {
    "MAINTENANCE_MODE": "false",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "MAINTENANCE_MODE": "false",
      "NODE_ENV": "production"
    }
  }
}